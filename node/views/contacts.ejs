<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="stylesheet" href="/contacts.css">
    <link rel="stylesheet" href="/style_header.css">
    <link rel="stylesheet" href="/style_footer.css">
    <title>Fripman</title>
    <link rel="icon" href="loggo_tansparent.png">
</head>

<body>
  <%- include('header') %>
  <h1>Contact Requests</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Object</th>
      <th>Gerer</th>
    </tr>
    <% contacts.forEach(contact => { %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.object %></td>
      <td><button class="manage"><a href="/contacts/<%= contact.id %>">Contacter</a></button></td>
    </tr>
    <% }) %>
  </table>

  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a href="/contacts?page=<%= currentPage - 1 %>">Previous</a>
    <% } %>
    <span>Page <%= currentPage %> of <%= totalPages %></span>
    <% if (currentPage < totalPages) { %>
      <a href="/contacts?page=<%= currentPage + 1 %>">Next</a>
    <% } %>
  </div>

  <%- include('footer') %>
</body>



  